<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the background for the progress -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#C0C0C0" /> <!-- Grey color when not filled -->
        </shape>
    </item>
    <!-- Define the progress bar (filled portion) -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="@color/light_blue" /> <!-- Blue color when full -->
            </shape>
        </clip>
    </item>
</layer-list>
